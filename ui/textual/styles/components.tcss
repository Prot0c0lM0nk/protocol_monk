/* ui/textual/styles/components.tcss */

InputBar {
    dock: bottom;
    width: 100%;
    height: 10;
    min-height: 3;
    padding: 0 0 2 0;
    background: #03070d;
    align: center middle;
}

InputBar > TextArea {
    width: 70%;
    padding: 0 0 0 1;
    margin-right: 1;
    content-align: center middle;
}

InputBar > Button {
    width: auto;
    padding: 0 0 0 0;
    min-width: 10;
    content-align: center middle;
    height: auto;
}

InputBar > Button:hover {
    background: #00d7ff;
    color: #000000;
}

StatusBar {
    width: 100%;
    height: 1;
    padding: 0 1;
    layout: horizontal;
    background: #0f1722;
    color: #d5e6f8;
}

StatusBar Label,
StatusBar Static {
    padding: 0 1 0 0;
}

StatusBar > .separator {
    color: #5e7ea1;
    padding: 0;
}

StatusBar > .metric-label {
    color: #8ab5da;
    text-style: bold;
}

StatusBar > .spacer {
    width: 1fr;
    padding: 0;
}

#app-title {
    color: #9dd7ff;
    text-style: bold;
}

#provider-label,
#model-label,
#messages-label,
#token-label,
#working-dir-label {
    color: #d5e6f8;
}

#provider-label {
    min-width: 8;
}

#model-label {
    width: 18;
}

#messages-label {
    min-width: 4;
}

#token-label {
    width: 14;
}

#working-dir-label {
    width: 24;
}

#status-label {
    color: #7fd7a8;
    min-width: 10;
}

.status-thinking {
    color: #f6e58d;
}

.status-error {
    color: #ff8e8e;
}

.status-idle {
    color: #7fd7a8;
}
