# Protocol Monk Configuration Template
# Copy this file to .env and customize for your environment

# ============================================================================
# MODEL SELECTION
# ============================================================================

# Option 1: Use local Ollama models (FREE)
PROTOCOL_MODEL=qwen3:4b

# Option 2: Use Anthropic Claude (PAID, requires API key)
# PROTOCOL_MODEL=claude-sonnet-4-5-20250929
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================================================
# WORKSPACE CONFIGURATION
# ============================================================================

# Directory where Protocol Monk operates (default: ~/Desktop/monk_workspace)
PROTOCOL_WORKING_DIR=~/Desktop/monk_workspace

# ============================================================================
# API ENDPOINTS
# ============================================================================

# Ollama API URL (default: http://localhost:11434/api/chat)
PROTOCOL_OLLAMA_URL=http://localhost:11434/api/chat
# MLX LM server URL (OpenAI-compatible upstream server)
PROTOCOL_MLX_LM_URL=http://127.0.0.1:8080

# Request timeout in seconds (default: 420)
PROTOCOL_TIMEOUT=420

# ============================================================================
# CONTEXT MANAGEMENT
# ============================================================================

# Maximum context window size (auto-detected from model, but can override)
# PROTOCOL_CONTEXT_WINDOW=16384

# Token threshold to trigger pruning (default: 75% of context window)
# PROTOCOL_CRITICAL_TOKENS=12288

# Target tokens after pruning (default: 50% of context window)
# PROTOCOL_TARGET_TOKENS=8192

# ============================================================================
# OPTIONAL FEATURES
# ============================================================================

# Enable debug logging to file (default: false)
# PROTOCOL_DEBUG_LOGGING=true

# Print debug info to terminal (default: false, can be noisy)
# PROTOCOL_DEBUG_TERMINAL=false

# Use simple input mode if prompt_toolkit has issues (default: false)
# PROTOCOL_SIMPLE_INPUT=false
